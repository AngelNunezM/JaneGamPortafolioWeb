---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen relative">
		<div class="absolute top-0 z-[-2] h-screen w-full rotate-180 transform bg-white bg-[radial-gradient(60%_120%_at_50%_50%,hsla(0,0%,100%,0)_0,rgba(252,205,238,.5)_100%)]"></div>
		<Header />
		<slot />
		<Footer />
		<div class=" fixed px-2 flex flex-col gap-2 rounded-lg bg-white/50 border-pink-300 border-2 backdrop:blur-md bottom-5 left-5">
			<span class="text-pink-500 font-medium">Listen my recent song</span>
			<iframe src="https://open.spotify.com/embed/track/0Ka0sRsASIk59IoFHB50Dd?utm_source=generator&theme=0" width="100%" height="100" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #252525;
		background-size: 224px;
		color-scheme: light;
	}
</style>
